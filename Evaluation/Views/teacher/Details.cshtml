<h2>Student Evaluation</h2>
<style>
    table, td, th {
        border-bottom: inset;
    }

    th, td {
        padding: 15px;
    }

    td {
        text-align: right;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    h2 {
        color: white;
        background-color: crimson;
        border-bottom: inset;
        text-align: center;
        text-size-adjust: 75%;
    }
</style>

<!-- teacher only sees forms based on the teacherID they selected on previous page -->
<div>
    <form method="get">
        <b>Student Id:</b> @Html.DisplayFor(model => model.StudentID)
        <!-- questions and answers in a table-->
        <table class="table">

            <tr>
                <th>Effective Teaching</th>
                <td>@Html.DisplayFor(model => model.EffectiveTeaching)</td>
            </tr>
            <tr>
                <th>Provides Feedback</th>
                <td>@Html.DisplayFor(model => model.ProvidesFeedback)</td> 
            </tr>
            <tr>
                <th>Learning Climate</th>
                <td>@Html.DisplayFor(model => model.learningClimate)</td>
            </tr>
            <tr>
                <th>Demonstrates Knowledge</th>
                <td>@Html.DisplayFor(model => model.DemonstrateKnowlege)</td>
            </tr>
            <tr>
                <th>Professionalism</th>
                <td>@Html.DisplayFor(model => model.professionalism)</td>
            </tr>
            <tr>
                <th>Overall Ranking</th>
                <td>@Html.DisplayFor(model => model.overAllRanking)</td>
            </tr>
        </table>
    </form>
</div>
