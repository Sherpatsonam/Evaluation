
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Evaluation.Models.Evaluation>

<br />
<br />
<br />
<br />
<br />
<br />
<br />
@{
    ViewBag.Title = "Department";

}


<h2>Department Overview</h2>
<h3>@ViewBag.Message</h3>



<body>
    <style>
        table, td, th {
            border-bottom: inset;
        }

        th, td {
            padding: 15px;
        }

        td {
            text-align: right;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        h2 {
            color: white;
            background-color: crimson;
            border-bottom: inset;
            text-align: center;
            text-size-adjust: 75%;
        }
    </style>

    <div>

        <form method="get">
            <h3 align="center">Evaluations</h3>

            @foreach (var item in Model)
            {
                <table class="table">

                    <tr>
                        <th>Student ID: </th>
                        <td>@Html.DisplayFor(modelItem => item.StudentID)</td>
                    </tr>
                    <tr>
                        <th>Effective Teaching</th>
                        <td>@Html.DisplayFor(modelItem => item.EffectiveTeaching)</td>
                    </tr>
                    <tr>
                        <th>Provides Feedback</th>
                        <td>@Html.DisplayFor(modelItem => item.ProvidesFeedback)</td>
                    </tr>
                    <tr>
                        <th>Learning Climate</th>
                        <td>@Html.DisplayFor(modelItem => item.learningClimate)</td>
                    </tr>
                    <tr>
                        <th>Demonstrates Knowledge</th>
                        <td>@Html.DisplayFor(modelItem => item.DemonstrateKnowlege)</td>
                    </tr>
                    <tr>
                        <th>Professionalism</th>
                        <td>@Html.DisplayFor(modelItem => item.professionalism)</td>
                    </tr>
                    <tr>
                        <th>Overall Ranking</th>
                        <td>@Html.DisplayFor(modelItem => item.overAllRanking)</td>
                    </tr>
                </table>
                <br />
                <br />
                <br />
            }


        </form>
    </div>
</body>


<p>
